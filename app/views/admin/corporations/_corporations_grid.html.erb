<%= render(Jove::TurboGrid::Component.new(id: :corporations, scope: corporations, params:)) do |grid| %>
  <% grid.column(label: t('.columns.name'), sorted: sorted?(:name), sort_dir:) %>
  <% grid.column(label: t('.columns.ticker'), sorted: sorted?(:ticker), sort_dir:) %>
  <% grid.column(label: t('.columns.alliance'), sorted: sorted?(:alliance), sort_dir:) %>
  <% grid.column(label: t('.columns.created'), sorted: sorted?(:created), sort_dir:) %>
  <% grid.column(label: t('.columns.updated'), sorted: sorted?(:updated), sort_dir:) %>

  <% corporations.each do |corporation| %>
    <% grid.row do |row| %>
      <% row.cell do %><%= corporation.name %><% end %>
      <% row.cell do %><%= corporation.ticker %><% end %>
      <% row.cell do %><%= corporation.alliance_name %><% end %>
      <% row.cell do %><%= local_time(corporation.created_at) %><% end %>
      <% row.cell do %><%= local_time(corporation.esi_last_modified_at) %><% end %>
    <% end %>
  <% end %>
<% end %>
