<%= turbo_frame_tag 'flash' do %>
  <% if flash[:failure] %>
    <%= render(Jove::Banner::Component.new(color: :danger)) do |b| %>
      <%= flash[:failure] %>
    <% end %>
  <% elsif flash[:success] %>
    <%= render(Jove::Banner::Component.new(color: :success, auto_dismiss: flash[:auto_dismiss])) do |b| %>
      <%= flash[:success] %>
    <% end %>
  <% elsif flash[:primary] %>
    <%= render(Jove::Banner::Component.new(color: :primary, auto_dismiss: flash[:auto_dismiss])) do |b| %>
      <%= flash[:primary] %>
    <% end %>
  <% end %>
<% end %>
